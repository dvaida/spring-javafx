<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:lang="http://www.springframework.org/schema/lang"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:rm="http://www.mycompany.com/schema/rm"
       
        
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
          http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-5.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-5.0.xsd
          http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-5.0.xsd
          http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-5.0.xsd
          http://www.mycompany.com/schema/rm http://www.mycompany.com/schema/rm/rm.xsd">
  <!-- Connections --> 
  <rm:db-connection id="db-connection"> 
    <rm:db-user value="postgres"/>
    <rm:db-password value="postgres"/>
    <rm:db-port value="5432"/>
    <rm:db-url value="localhost"/>
    <rm:db-schema value="dev_test"/>
  </rm:db-connection>
  <!-- Connections --> 
  
  <!-- Observables --> 
  <rm:int-property id="stnIdObs"/> 
  <rm:int-property id="sensorDefObs"/> 
  <rm:daterange-property id="dateRangeObs"/> 
  <!-- Observables --> 
  
  <!-- Invokers --> 
  <bean id="seriesDataSourceInvoker" class="com.rm.datasources.Invoker"/> 
  
  <!-- Invokers --> 
  
  <!-- Data sources --> 
  <rm:sql-datasource id ="seriesDataSource" 
                     dbConnectionRef="db-connection"                  
                     idField="sensor_id">
    <rm:query-file value="sql/01.series.01.series.sql"/> 
    <rm:query-params invokerRef="seriesDataSourceInvoker">
      <rm:query-param name="stnId" valueRef="stnIdObs"/>
      <rm:query-param name="sensorDefId" valueRef="sensorDefObs"/>
      <rm:query-param name="startDate" valueRef="dateRangeObs#startDateProperty"/>
      <rm:query-param name="endDate" valueRef="dateRangeObs#endDateProperty"/>
    </rm:query-params>
    
  </rm:sql-datasource>  
  
  <rm:sql-datasource id ="stationsDataSource" dbConnectionRef="db-connection" idField="station_id">
    <rm:query-file value="sql/01.series.02.stations.sql"/> 
  </rm:sql-datasource>  
  
  <rm:sql-datasource id ="sensorsDataSource" dbConnectionRef="db-connection" idField="sensor_def_id">
    <rm:query-file value="sql/01.series.02.sensors.sql"/> 
  </rm:sql-datasource>  
  <rm:sql-datasource id ="stationSensorsDataSource" dbConnectionRef="db-connection" idField="sensor_id">
    <rm:query-file value="sql/01.series.02.station_sensors.sql"/> 
  </rm:sql-datasource>  
  <!-- Data sources --> 
  
  <!-- Views --> 
  <rm:tableview id="test-tableview"
                fxml="fxml/Sample.fxml"
                fxmlId="seriesTableView"
                datasource-ref="seriesDataSource"> 
    <rm:columns>
      <rm:columndef label="Sensor Id" 
                    columnIndex="0" 
                    propertyName="sensor_id" 
                    rendererType="Text"/>
      <rm:columndef label="Time Stamp" 
                    columnIndex="1"
                    propertyName="timestamp">
        <rm:render-type class="Currency"/> 
      </rm:columndef>
      
      <rm:columndef label="Value" 
                    columnIndex="2"
                    propertyName="value" >
        <rm:render-type class="Currency"/> 
      </rm:columndef>
    </rm:columns>
  </rm:tableview>
  
  <rm:combobox id="stationCombobox" 
               fxml="fxml/Sample.fxml"
               fxmlId="stationComboBox"
               value-ref="stnIdObs" 
               datasource-ref="stationsDataSource">

    <rm:listitem-converter class="com.rm.springjavafx.converters.RecordValueStringConverter">
      <property name="valueField" value="station_name"/>
    </rm:listitem-converter> 
    <rm:selectionitem-converter class="com.rm.springjavafx.converters.RecordValueStringConverter">
      <property name="valueField" value="station_id"/>
    </rm:selectionitem-converter> 
    
  </rm:combobox> 
  
  <rm:combobox id="sensorDefComboBox" 
               fxml="fxml/Sample.fxml"
               fxmlId="sensorComboBox"
               value-ref="sensorDefObs" 
               datasource-ref="sensorsDataSource"> 
    <!-- Views --> 
    <rm:listitem-converter class="com.rm.springjavafx.converters.RecordValueStringConverter">
      <property name="valueField" value="sensor_def"/>
    </rm:listitem-converter> 
    <rm:selectionitem-converter class="com.rm.springjavafx.converters.RecordValueStringConverter">
      <property name="valueField" value="sensor_def_id"/>
    </rm:selectionitem-converter> 
  </rm:combobox>
  
  <rm:datepicker id="startDatePicker"
                 fxml="fxml/Sample.fxml"
                 fxmlId="startDatePicker"
                 value-ref="dateRangeObs#startDateProperty"/> 
  <rm:datepicker id="endDatePicker"
                 fxml="fxml/Sample.fxml"
                 fxmlId="endDatePicker"
                 value-ref="dateRangeObs#endDateProperty"/> 
  <rm:button-bind id="applySearchBtnBind"
                  fxml="fxml/Sample.fxml" 
                  fxmlId="applySearchBtn" 
                  invokerRef="seriesDataSourceInvoker"/>
</beans>
